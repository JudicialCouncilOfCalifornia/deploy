RUN echo "host   all   all  0.0.0.0/0   md5" >> /etc/postgresql/9.6/main/pg_hba.conf && echo "listen_addresses = '*'" >> /etc/postgresql/9.6/main/postgresql.conf
RUN easy_install pip && pip install --upgrade virtualenv pip 3to2 pdfx
